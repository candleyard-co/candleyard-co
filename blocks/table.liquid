  "name": "Table",
  "tag": null,
  "settings": [
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "color",
      "id": "column_bg",
      "label": "Column Background"
    }
  ],
  "blocks": [
    {
      "type": "_table-row",
    }
  ],
  "presets": [
    {
      "name": "Table",
      "category": "t:categories.layout"
    }
  ]
}
{% endschema %}