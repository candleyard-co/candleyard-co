

{% capture list_items %}
  {% content_for 'blocks' %}
{% endcapture %}
{% liquid
  # Create an array from the list items to be used for different layout types
  assign list_items_array = list_items | strip | remove_last: '<!--@list/split-->' | split: '<!--@list/split-->'
%}

{% if list_items_array.size > 0 %}
  <div class="table-wrapper" style="--width: {{ block.settings.custom_width }}%; --column-bg: {{ block.settings.column_bg }};">
    <table>
      <tbody>
        {% for item in list_items_array %}
          {{ item }}
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endif %}


{% stylesheet %}
.table-wrapper {
  width: 100%;
  overflow-x: auto;

  table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  td {
    padding: var(--padding-xl) var(--padding-lg);
    vertical-align: middle;
  }

  tbody {
    /* apply borders only from 2nd row */
    tr:not(:first-child) {
      td {
        border: 1px solid var(--color-border);
        border-right: 0;
      }

      td:last-child {
        border-right: 1px solid var(--color-border);
      }
    }

    /* remove double borders between body rows */
    tr:nth-child(n + 3) td {
      border-top: 0;
    }

    /* top rounded corners (row 2 only) */
    tr:nth-child(2) {
      td:first-child {
        border-top-left-radius: 15px;
      }

      td:last-child {
        border-top-right-radius: 15px;
      }
    }

    /* bottom rounded corners (last row) */
    tr:last-child {
      td:first-child {
        border-bottom-left-radius: 15px;
      }

      td:last-child {
        border-bottom-right-radius: 15px;
      }
    }

    /* ===== 2nd COLUMN STYLING ===== */
    tr td:nth-child(2) {
      background-color: var(--column-bg);
      border: none;
    }

    /* remove the left border of 3rd column so it doesnâ€™t show next to 2nd column */
    tr td:nth-child(3) {
      border-left: 0;
    }

    /* radius for 2nd column - first row */
    tr:first-child td:nth-child(2) {
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
    }

    /* radius for 2nd column - last row */
    tr:last-child td:nth-child(2) {
      border-bottom-left-radius: 15px;
      border-bottom-right-radius: 15px;
    }
  }

  svg {
    display: block;
    width: var(--icon-size-sm);
    margin-inline: auto;
  }

  @media (min-width: 750px) {
    max-width: var(--width);
    margin-inline: auto;
  }

  @media (max-width: 749px) {
    table {
      min-width: 500px;
      margin-inline: var(--page-margin);
    }
  }
}

{% endstylesheet %}

{% schema %}
