  "name": "Flip Card",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "card_icon",
      "label": "Card Icon"
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "color_scheme",
      "id": "outer_color_scheme",
      "label": "Outer Background",
      "default": "scheme-1"
