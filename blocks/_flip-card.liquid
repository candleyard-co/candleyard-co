{% liquid
  assign block_settings = block.settings
%}

<div class="flip-card group-block
    group-block--height-fit
    group-block--width-fill"
  {{ block.shopify_attributes }}>

  <div class="flip-card-inner">
    <div class="flip-card-front spacing-style  border-style color-{{ block_settings.outer_color_scheme }}"
      style="
      {% render 'border-override', settings: block_settings %}
       --border-radius: {{ block_settings.border_radius | minus: 5 }}px; 
      {% render 'spacing-style', settings: block_settings %}"
    >
      <div class="flip-front-content {% if block_settings.inherit_color_scheme == false %} color-{{ block_settings.color_scheme }}{% endif %}">
        {% if block_settings.card_icon != blank %}
            {% content_for 'block',
            type: '_object-image',
            id: 'flip-card-image',
            image_source: block_settings.card_icon,
            parent_block_id: block.id %}
        {% endif %}
      </div>
    </div>
    <div class="flip-card-back spacing-style border-style"
      style="
      {% render 'border-override', settings: block_settings %}
       --border-radius: {{ block_settings.border_radius | minus: 5 }}px; 
      {% render 'spacing-style', settings: block_settings %}">
        <div class="image-flip-card
            image-block image-block--height-fit size-style
          " style="
            --ratio: 1;
            --size-style-width: 100%;--size-style-height: fit;--size-style-width-mobile: 100%; --size-style-width-mobile-min: 5rem;
          " hidden>
          </div>
        <h3 class="flip-card-title"></h3>
    </div>
  </div>
</div>

{% stylesheet %}
  .flip-card {
    perspective: 1000px;
    cursor: pointer;
    aspect-ratio: 4 / 5;
    -webkit-tap-highlight-color: transparent;
  }

  .image-flip-card {

    img {
      object-fit: contain;
    }

    @media (max-width: 749px) {
      height: 3.5rem;
    }
  }

  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
  }

  .flip-card-front, .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden; /* Safari */
    backface-visibility: hidden;
    box-shadow: 4px 6px 3px -1px rgba(0,0,0,0.16);
    -webkit-box-shadow: 4px 6px 3px -1px rgba(0,0,0,0.16);
    -moz-box-shadow: 4px 6px 3px -1px rgba(0,0,0,0.16);
  }

  .flip-card.active .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-back {
    display: flex;
    align-items: center;
    flex-direction: column;
    transform: rotateY(180deg);
  }

  .flip-card[disabled] {
    pointer-events: none;
    cursor: not-allowed;

    .flip-front-content {
      background: rgb(255,255,255) !important;
    }
  }

  .flip-card .resource-image {
    width: 2.3rem;
    margin: auto;
    height: auto;

    @media (min-width: 750px) {
      width: 6rem;
    }
  }

  .flip-front-content {
    border-radius: var(--border-radius);
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .flip-card-title {
    font-size: var(--font-size--lg);
    margin-top: auto;

    @media (max-width: 749px) {
      font-size: var(--font-size--xs);
    }
  }
{% endstylesheet %}

